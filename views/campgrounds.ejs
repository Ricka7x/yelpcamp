<% include partials/header %>

<header class="jumbotron">
  <div class="container">
    <h1>Welcome to Yelpcamp</h1>
    <p>Lorem ipsum dolor sit amet, consectetur.</p>
    <p>
      <a class="btn btn-success btn-lg" href="/campgrounds/new">Add new campgrounds</a>
    </p>
  </div>
</header>

<a href="/">Back to home page</a>

<div class="container">
  <div class="row text-center">
    <h3>Checkout campgrounds from all over the world</h3>
  </div>
  <div class="row">
    <% campgrounds.forEach(function(campground){ %>
      <div class="col-md-3 col-sm-4">
        <div class="thumbnail">
          <img src="<%= campground.image %>" alt="">
          <div class="caption text-center">
            <h4><%= campground.name %></h4>
          </div>
          <div class="text-center">
            <a class="btn btn-primary" href="/campgrounds/<%= campground._id%>">More info</a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>



<% include partials/footer %>
